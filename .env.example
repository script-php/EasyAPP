# Application Configuration
APP_ENV=dev
DEBUG=true
APP_URL=http://localhost
APP_NAME=EasyAPP

# Database Configuration
DB_DRIVER=mysql
DB_HOST=localhost
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASS=your_database_password
DB_PORT=3306
DB_ENCODING=utf8mb4
DB_PREFIX=

# Cache Configuration  
CACHE_ENABLED=false
CACHE_DRIVER=file
CACHE_TTL=3600

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=7200
SESSION_SECURE=false
SESSION_HTTPONLY=true
SESSION_NAME=easyapp_session

# Security Configuration
CSRF_PROTECTION=true
INPUT_SANITIZATION=true

# Logging Configuration
LOG_LEVEL=error
LOG_FILE=storage/logs/error.log

# Performance Configuration
COMPRESSION=0

# Localization
LANGUAGE=en-gb
TIMEZONE=UTC

# Array Support Examples
# Comma-separated arrays
ALLOWED_HOSTS=localhost,127.0.0.1,::1
EMAIL_RECIPIENTS=admin@example.com,user@example.com
TAGS=web,api,framework,php

# JSON arrays
SOCIAL_LINKS=["https://github.com","https://twitter.com","https://linkedin.com"]
CONFIG_OPTIONS={"timeout":30,"retries":3,"ssl_verify":true}

# Indexed arrays (will be combined into single array)
DB_HOSTS_0=localhost
DB_HOSTS_1=127.0.0.1
DB_HOSTS_2=192.168.1.100
DB_PORTS_0=3306
DB_PORTS_1=3307
DB_PORTS_2=3308

# Boolean and numeric values
FEATURE_ENABLED=true
MAX_CONNECTIONS=100
RETRY_DELAY=1.5

# Development Configuration
DEV_DB_SCHEMA=false

# Legacy Support (kept for backward compatibility)
ENVIRONMENT=dev
BASE_URL=http://localhost/
URL=http://localhost/
DB_HOSTNAME=localhost
DB_DATABASE=your_database_name
DB_USERNAME=your_database_user
DB_PASSWORD=your_database_password
DOMAIN=localhost
